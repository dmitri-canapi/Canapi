<aura:component controller="CommunityPortfolioCompanies"
    implements="force:appHostable,flexipage:availableForAllPageTypes,forceCommunity:availableForAllPageTypes"
    access="global">
    <aura:attribute name="companies" type="Object" />
    <aura:attribute name="viewStyleOptions" type="List"
        default="[{'label': 'Tiles', 'value': 'Tiles'},{'label': 'Grid', 'value': 'Grid'}]" />
    <aura:attribute name="viewStyle" type="String" default="Tiles" />

    <aura:handler name="init" value="{! this }" action="{! c.init }" />

    <div class="slds-clearfix">
        <div class="slds-float_right slds-m-right_x-large">
            <lightning:radioGroup name="viewStyleFilter" label="" options="{! v.viewStyleOptions }"
                value="{! v.viewStyle }" type="button" />
        </div>
    </div>
    <aura:if isTrue="{!v.viewStyle=='Tiles'}">
        <div style="float:left; text-align: center;" class="slds-m-top_medium">
            <aura:iteration items="{!v.companies}" var="rec">
                <div class="card">
                    <div style="font-weight: 700; padding-top: 10px; font-size: 15px;">{!rec.Name}</div>
                    <div
                        style="display: table; vertical-align: top; width:100%; height:100%; line-height: 1.3em;margin-top: -15px;">
                        <div
                            style="width:45%; height:100%;display: table-cell; vertical-align: middle;  text-align: center;">
                            <aura:if isTrue="{!rec.PhotoUrl__c!=null}">
                                <img style="width:80px" src="{!rec.PhotoUrl__c}" />
                                <aura:set attribute="else">
                                    <aura:if isTrue="{!rec.External_Logo__c!=null}">
                                        <img style="width:80px"
                                            src="{! 'data:image/png;base64,' + rec.External_Logo__c + rec.External_Logo2__c + rec.External_Logo3__c}" />
                                        <aura:set attribute="else">

                                            <img style="width:80px" src="{! '../services/images/photo/' + rec.Id}" />
                                        </aura:set>
                                    </aura:if>
                                </aura:set>
                            </aura:if>
                        </div>
                        <div
                            style="width:55%; height:170px;display:table-cell; vertical-align: middle;text-align: left;    padding-right: 5px;">
                            <aura:if isTrue="{!!and(rec.BillingStreet==null, rec.BillingCity==null)}">
                                <p class="tileLabel">Address</p>
                                <p class="tileValue">
                                    <aura:if isTrue="{!rec.BillingStreet!=null}">{!rec.BillingStreet}</aura:if>
                                    <aura:if isTrue="{!rec.BillingCity!=null}">, &nbsp;{!rec.BillingCity}</aura:if>
                                    <aura:if isTrue="{!rec.BillingState!=null}">, &nbsp;{!rec.BillingState}</aura:if>
                                    <aura:if isTrue="{!rec.BillingPostalCode!=null}">, &nbsp;{!rec.BillingPostalCode}
                                    </aura:if>
                                    <aura:if isTrue="{!rec.BillingCountry!=null}">, &nbsp;{!rec.BillingCountry}
                                    </aura:if>
                                </p>
                            </aura:if>
                            <aura:if isTrue="{!rec.Website!=null}">
                                <br />
                                <p class="tileLabel">Website</p>
                                <p class="tileValue" style="font-size: 12px;">
                                    <a href="{!rec.Website}" target="_blank">{!rec.Website}</a>
                                </p>
                            </aura:if>
                            <aura:if isTrue="{!rec.PhoneNumber__c!=null}">
                                <br />
                                <p class="tileLabel">Contact</p>
                                <p class="tileValue">
                                    <a href="{! 'tel:' +  rec.PhoneNumber__c}">{!rec.PhoneNumber__c}</a>
                                </p>
                            </aura:if>
                        </div>
                    </div>
                    <div
                        style="text-align: right; height: 40px; border: 1px solid #1A182D; background: #1A182D; color: white; display: table; width: 100%;     ">
                        <div style=" text-align: right; display:table-cell;vertical-align: middle;">
                            <a href="{! '/alliance/s/detail/' + rec.Id}" style="color:white !important;">About
                                {!rec.Name}
                                <img src="{!$Resource.AllianceCommunityAssets + '/Icons/next.svg'}"
                                    style="height: 30px; margin: 0px 5px 0px 5px" />

                            </a>
                        </div>
                    </div>
                </div>
            </aura:iteration>
        </div>
        <div class="slds-m-around_small slds-clearfix" style="clear:both;"></div>
        <aura:set attribute="else">
            <div class=" slds-m-top_medium">
                <lightning:listView aura:id="listViewAccounts" objectApiName="Account" listName="Portfolio_Accounts"
                    rows="15" showSearchBar="true" showActionBar="true" enableInlineEdit="false"
                    showRowLevelActions="false" />
            </div>
        </aura:set>
    </aura:if>
</aura:component>