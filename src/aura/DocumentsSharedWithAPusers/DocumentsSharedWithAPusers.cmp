<aura:component controller="DocumentsSharedWithAPusers"
    implements="force:appHostable,flexipage:availableForAllPageTypes,forceCommunity:availableForAllPageTypes"
    access="global">
    <aura:attribute name="docs" type="List" default="[]" />

    <aura:handler name="init" value="{! this }" action="{! c.doInit }" />

    <div class="slds-box">
        <article class="slds-card">
            <div class="slds-card__header slds-grid">
                <header class="slds-media slds-media_center slds-has-flexi-truncate">
                    <div class="slds-media__body">
                        <h2 class="slds-card__header-title" style="display: inline-block;">
                            <span class="slds-card__header-link slds-text-heading--small">Documents, shared with
                                Alliance Portal Users</span>
                        </h2>
                    </div>
                </header>
            </div>
            <!--div class="slds-card__body"-->



                <table class="slds-table slds-table_bordered slds-table_cell-buffer">
                    <thead>
                        <tr class="slds-text-title_caps">
                            <th scope="col">
                                <div class="slds-truncate">Document Name</div>
                            </th>
                            <th scope="col">
                                <div class="slds-truncate">Account Name</div>
                            </th>
                            <th scope="col">
                                <div class="slds-truncate">Contact Name</div>
                            </th>
                            <th scope="col">
                                <div class="slds-truncate">Board Meeting Name</div>
                            </th>
                            <th scope="col">
                                <div class="slds-truncate">Created Date
                                </div>
                            </th>
                            <th scope="col">
                                <div class="slds-truncate">Owner Name
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <aura:iteration items="{!v.docs}" var="doc">
                            <tr>
                                <td scope="row">
                                    <div class="slds-truncate">
                                        <a href="{! '/' + doc.Id}">{!doc.Name__c}</a>
                                    </div>
                                </td>
                                <td scope="row">
                                    <div class="slds-truncate">
                                        <a href="{! '/' + doc.Account__c}">{!doc.Account__r.Name}</a>
                                    </div>
                                </td>
                                <td scope="row">
                                    <div class="slds-truncate">
                                        <a href="{! '/' + doc.Contact__c}">{!doc.Contact__r.Name}</a>
                                    </div>
                                </td>
                                <td scope="row">
                                    <div class="slds-truncate">
                                        <a href="{! '/' + doc.Board_Meeting__c}">{!doc.Board_Meeting__r.Name}</a>
                                    </div>
                                </td>
                                <td scope="row">
                                    <div class="slds-truncate">
                                        <lightning:formattedDateTime value="{!doc.CreatedDate}" year="numeric"
                                            month="numeric" day="numeric" hour="2-digit" minute="2-digit" timeZone="UTC"
                                            hour12="false" />
                                    </div>
                                </td>
                                <td scope="row">
                                    <div class="slds-truncate">
                                        {!doc.Owner.Name}
                                    </div>
                                </td>
                            </tr>
                        </aura:iteration>

                    </tbody>
                </table>




            <!--/div-->
        </article>
    </div>

</aura:component>