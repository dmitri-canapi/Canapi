<aura:component implements="forceCommunity:availableForAllPageTypes" access="global"
    extends="forceCommunity:navigationMenuBase" controller="communityVerticalNavCtrl">
    <aura:attribute name="menus" type="Object[]" />
    <aura:attribute name="showMenu" type="boolean" default="false" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />

    <div class="slds-grid slds-grid--vertical slds-navigation-list--vertical customNav" onmouseover="{!c.showLabels}"
        onmouseout="{!c.hideLabels}">
        <ul onclick="{!c.onClick}">

            <li onclick="{!c.switchMenuState}">
                <a href="javascript:void(0);" class="slds-navigation-list--vertical__action slds-text-link--reset">
                    <img src="{!$Resource.AllianceCommunityAssets + '/Menu/menu.svg'}" class="icon"></img>
                </a>
            </li>
            <aura:iteration items="{!v.menus}" var="menu">
                <li class="{!menu.active ? 'activeItem main-menu' : 'main-menu'}">


                    <aura:renderIf isTrue="{!menu.menus==null}">
                        <a href="{!menu.link}" class="slds-navigation-list--vertical__action slds-text-link--reset">
                            <img src="{!$Resource.AllianceCommunityAssets + '/Menu/' + menu.pic}" class="icon"></img>
                            <span aura:id="itemLabel" class="itemLabel slds-hide">{!menu.label}</span>
                        </a>
                    </aura:renderIf>
                    <aura:renderIf isTrue="{!menu.menus!=null}">
                        <a class="slds-navigation-list--vertical__action slds-text-link--reset">
                            <img src="{!$Resource.AllianceCommunityAssets + '/Menu/' + menu.pic}" class="icon"></img>
                            <span aura:id="itemLabel" class="itemLabel slds-hide">{!menu.label}</span>
                        </a>
                        <ul class="child-menu-ul">
                            <aura:iteration items="{!menu.menus}" var="childMenu">
                                <li class="{!childMenu.active ? 'activeItem' : 'nonActiveItem'}">
                                    <a href="{!childMenu.link}"
                                        class="slds-navigation-list--vertical__action slds-text-link--reset">
                                        <img src="{!$Resource.AllianceCommunityAssets + '/Icons/' + childMenu.pic}"
                                            class="childIcon"></img>
                                        <span aura:id="itemLabel" class="itemLabel">{!childMenu.label}</span>
                                    </a>
                                </li>
                            </aura:iteration>
                        </ul>
                    </aura:renderIf>
                </li>
            </aura:iteration>

        </ul>
    </div>
</aura:component>