<aura:component controller="FinancialsLogoController"
    implements="force:appHostable,flexipage:availableForAllPageTypes,forceCommunity:availableForAllPageTypes"
    access="global">
    <aura:attribute name="acc" type="Object" access="global" />


    <aura:handler name="init" value="{! this }" action="{! c.init }" />



    <div class="slds-m-top_medium">

        <div class="card">

            <div style="font-weight: 700; padding-top: 10px; font-size: 15px;"></div>
            <div style="vertical-align: top; width:100%; height:100%; line-height: 1.3em;margin-top: -15px;">
                <div style="font-size: 16px; height:100%;vertical-align: middle; padding: 0px 0px 0px 20px;">
                    <div style="font-size: 22px;font-weight: bold;padding-bottom: 25px;">Financials</div>
                    <aura:if isTrue="{!v.acc.PhotoUrl__c!=null}">
                        <img style="width:70px;margin-right: 10px;" src="{!v.acc.PhotoUrl__c}" /> Quarterly Financials
                        <aura:set attribute="else">
                            <aura:if isTrue="{!v.acc.External_Logo__c!=null}">
                                <img style="width:70px;margin-right: 10px;"
                                    src="{! 'data:image/png;base64,' + v.acc.External_Logo__c + v.acc.External_Logo2__c + v.acc.External_Logo3__c}" />
                                Quarterly Financials
                                <aura:set attribute="else">

                                    <div>{!v.acc.Name} Quarterly Financials</div>
                                </aura:set>
                            </aura:if>
                        </aura:set>
                    </aura:if>
                </div>

            </div>

        </div>
    </div>
    <div class="slds-m-around_small slds-clearfix" style="clear:both;"></div>


</aura:component>