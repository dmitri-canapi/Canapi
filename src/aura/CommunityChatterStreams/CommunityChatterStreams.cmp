<aura:component controller="CommunityChatterStreams" implements="force:appHostable,flexipage:availableForAllPageTypes,forceCommunity:availableForAllPageTypes" access="global" >
    <aura:attribute name="streams" type="Object"/>
    
    <aura:handler name="init" value="{! this }" action="{! c.init }"/>
    
		<h2 class="listTitle truncate" style="font-size: 16px; line-height: 24px; font-weight: 700;text-transform: uppercase;">Chatter Streams</h2>
        <div style="" class="slds-m-top_medium">
            <aura:iteration items="{!v.streams}" var="rec" >
                <div class="card">
                    <a href="{! '/alliance/s/streams/' + rec.id}">{!rec.name}</a>
                <hr style="margin: 0.5rem 0px;"/>
                </div>
            </aura:iteration>
            <a href="/alliance/s/streams" style="margin-top: 15px; display:block">View All</a>
        </div> 
        
</aura:component>