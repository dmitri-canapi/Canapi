<aura:component controller="CanapiContactsController"
    implements="flexipage:availableForAllPageTypes,forceCommunity:availableForAllPageTypes" access="global">

    <aura:attribute name="data" type="Object" />
    <aura:attribute name="columns" type="List" />
    <aura:attribute name="errors" type="Object" default="[]" />

    <aura:attribute name="viewStyleOptions" type="List"
        default="[{'label': 'Tiles', 'value': 'Tiles'},{'label': 'Grid', 'value': 'Grid'}]" />
    <aura:attribute name="viewStyle" type="String" default="Tiles" />

    <aura:handler name="init" value="{! this }" action="{! c.init }" />
    <lightning:layout horizontalAlign="end">


    </lightning:layout>

    <div class="slds-clearfix">
        <div class="slds-float_right slds-m-right_x-large">
            <ul class="slds-list_horizontal">
                <li style="    margin: -5px 10px;">
                    <lightning:radioGroup name="viewStyleFilter" label="" options="{! v.viewStyleOptions }"
                        value="{! v.viewStyle }" type="button" />
                </li>
            </ul>
        </div>
    </div>

    <aura:if isTrue="{!v.viewStyle=='Tiles'}">
        <div class="slds-clearfix">
            <div style="float:left; text-align: center;" class="slds-m-top_medium">
                <aura:iteration items="{!v.data}" var="rec">
                    <div class="card">
                        <div style="font-weight: 700; padding-top: 10px; font-size: 15px;">{!rec.cont.Name}</div>
                        <div
                            style="display: table; vertical-align: top; width:100%; height:100%; line-height: 1.3em;margin-top: 5px;">
                            <div
                                style="width:45%; height:100%;display: table-cell; vertical-align: middle;  text-align: center;">
                                <!--img style="width:80px" src="{! '../services/images/photo/' + rec.Id}"/-->
                                <aura:if
                                    isTrue="{!and(rec.u.FullPhotoUrl  , rec.u.FullPhotoUrl != '/alliance/profilephoto/005/F')}">
                                    <img style="width:80px" src="{! '' + rec.u.FullPhotoUrl}" />
                                    <aura:set attribute="else">
                                        <aura:if isTrue="{!rec.cont.Account.External_Logo__c!=null}">
                                            <img style="width:80px"
                                                src="{! 'data:image/png;base64,' + rec.cont.Account.External_Logo__c + rec.cont.Account.External_Logo2__c + rec.cont.Account.External_Logo3__c}" />
                                            <aura:set attribute="else">
                                                <img style="width:80px"
                                                    src="{! '../services/images/photo/' + rec.cont.Id}" />
                                            </aura:set>
                                        </aura:if>
                                    </aura:set>
                                </aura:if>
                            </div>
                            <div
                                style="width:55%; height:170px;display:table-cell; vertical-align: middle;text-align: left;    padding-right: 5px;">

                                <aura:if isTrue="{!rec.cont.Title!=null}">
                                    <br />
                                    <p class="tileLabel">Title</p>
                                    <p class="tileValue" style="font-size: 12px;" title="{!rec.cont.Title}">
                                        {!rec.cont.Title}
                                    </p>
                                </aura:if>
                                <aura:if isTrue="{!rec.cont.MobilePhone!=null}">
                                    <br />
                                    <p class="tileLabel">Mobile</p>
                                    <p class="tileValue">
                                        <a href="{! 'tel:' +  rec.cont.MobilePhone}"
                                            title="{!rec.cont.MobilePhone}">{!rec.cont.MobilePhone}</a>
                                    </p>
                                </aura:if>
                                <aura:if isTrue="{!rec.cont.Phone!=null}">
                                    <br />
                                    <p class="tileLabel">Phone</p>
                                    <p class="tileValue">
                                        <a href="{! 'tel:' +  rec.cont.Phone}"
                                            title="{!rec.cont.Phone}">{!rec.cont.Phone}</a>
                                    </p>
                                </aura:if>
                                <aura:if isTrue="{!rec.cont.Email!=null}">
                                    <br />
                                    <p class="tileLabel">Email</p>
                                    <p class="tileValue">
                                        <a href="{! 'mailto:' +  rec.cont.Email}"
                                            title="{!rec.cont.Email}">{!rec.cont.Email}</a>
                                    </p>
                                </aura:if>
                            </div>
                        </div>
                        <div
                            style="text-align: right; height: 40px; border: 1px solid #1A182D; background: #1A182D; color: white; display: table; width: 100%;     ">
                            <div style=" text-align: right; display:table-cell;vertical-align: middle;">
                                <a href="{! '../s/detail/' + rec.cont.Id}" style="color:white !important;">About
                                    {!rec.cont.Name}
                                    <img src="{!$Resource.AllianceCommunityAssets + '/Icons/next.svg'}"
                                        style="height: 30px; margin: 0px 5px 0px 5px" />

                                </a>
                            </div>
                        </div>
                    </div>
                </aura:iteration>
            </div>
        </div>
        <aura:set attribute="else">
            <div class=" slds-m-top_medium">
                <lightning:listView objectApiName="Contact" listName="Canapi_Contacts" rows="30" showSearchBar="true"
                    showActionBar="true" enableInlineEdit="false" showRowLevelActions="false" />
            </div>
        </aura:set>
    </aura:if>
</aura:component>